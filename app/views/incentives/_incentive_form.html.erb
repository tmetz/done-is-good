<%= render partial: 'layouts/errors', locals: {object: incentive} %>

<%= form_for(incentive) do |f| %>

    <div class = "form-group col-md-6">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
    </div>

    <div class = "form-group col-md-6">
        <%= f.label :num_tasks, "How many tasks need to be finished?" %>
        <%= f.number_field :num_tasks, class: 'form-control' %>
    </div>

    <br><br>
    <div class = "form-group col-md-6">
        <%= f.label :goal, "Assign to a goal" %>
        <%= f.collection_select :goal_id, Goal.all, :id, :name, {prompt: true}, {class: 'form-control'} %>
    </div>

    <%= f.submit class: 'btn btn-dark' %>
<% end %>