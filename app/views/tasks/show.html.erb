<h2> Task: <%= @task.description %> </h2>

<%= render partial: 'layouts/errors', locals: {object: @task} %>

<h5>
    Part of goal: <%= link_to @task.goal.name, goal_path(@task.goal) %>
    <br>
    <% if @task.done %>
        <% finished = "Yes" %>
    <% else %>
        <% finished = "No" %>
    <% end %>
    Finished? <%= finished %>
</h5>

<br><br>
<%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-outline-dark" %>  

<%= link_to "Delete Task", task_path(@task), method: :delete, class: "btn btn-outline-dark" %>