<h1>Edit task</h1>

<%= render partial: 'layouts/errors', locals: {object: @task} %>

<%= form_for(@task) do |f| %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>

    <%= f.label :done %>
    <%= f.check_box :done %>
    <br>

    <%= f.label :goal %>
    <%= f.collection_select :goal_id, Goal.all, :id, :name %>
    <br>

    <%= f.submit %>
<% end %>
