<%= render partial: 'layouts/errors', locals: {object: goal} %>

<%= form_for(goal) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <br>

    <%= f.label :accomplished %>
    <%= f.radio_button :accomplished, true %> Yes
    <%= f.radio_button :accomplished, false %> No
    <br>

    <%= f.submit %>

<% end %>