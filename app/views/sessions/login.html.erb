<h1>Log in here</h1>

<%= render partial: 'layouts/errors', locals: {object: @user} %>
<div class = "flash_errors">
    <%= flash[:error] %>
</div>

<%= form_for @user, url: '/login' do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username, class: 'form-control' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.submit "Log In" %>

<% end %>